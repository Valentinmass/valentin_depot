	author = {Mahtout, Sarah},
	year = {2024},
	file = {Full Text PDF:C\:\\Users\\valen\\Zotero\\storage\\2R2SRCLB\\Mahtout - 2024 - Intégration de l’intelligence artificielle dans la gestion des élevages bovins laitiers.pdf:application/pdf},
