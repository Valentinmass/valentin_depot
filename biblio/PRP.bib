	note = {arXiv:2508.01752 [cs]},
	keywords = {Computer Science - Artificial Intelligence, Computer Science - Computer Vision and Pattern Recognition},
	annote = {Comment: Submitted in Smart Agriculture Technology},
	file = {Preprint PDF:C\:\\Users\\valen\\Zotero\\storage\\UWAI6SRN\\Abbas et al. - 2025 - Vision transformer-based multi-camera multi-object tracking framework for dairy cow monitoring.pdf:application/pdf},
