	urldate = {2026-02-05},
	journal = {International Journal of Distributed Sensor Networks},
	author = {Melak, Awoke and Aseged, Tesfalem and Shitaw, Takele},
	year = {2024},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1155/2024/8929748},
	pages = {8929748},
