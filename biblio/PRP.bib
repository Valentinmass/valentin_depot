	number = {12},
	urldate = {2026-02-05},
	journal = {Animals},
	publisher = {Multidisciplinary Digital Publishing Institute},
	author = {de Oliveira, Franck Morais and Ferraz, Gabriel Araújo e Silva and André, Ana Luíza Guimarães and Santana, Lucas Santos and Norton, Tomas and Ferraz, Patrícia Ferreira Ponciano},
	month = jan,
	year = {2024},
	keywords = {bibliometric review, dairy cows, precision livestock farming, technologies},
	pages = {1832},
	file = {Full Text PDF:C\:\\Users\\valen\\Zotero\\storage\\DNKPLHXD\\de Oliveira et al. - 2024 - Digital and Precision Technologies in Dairy Cattle Farming A Bibliometric Analysis.pdf:application/pdf},
